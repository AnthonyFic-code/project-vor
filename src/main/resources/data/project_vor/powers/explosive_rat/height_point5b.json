        {
          "type": "origins:execute_command",
          "command": "scale set pehkui:motion 4 @s"
        },
        {
          "type": "origins:execute_command",
          "command": "scale set pehkui:reach 4 @s"
        },
        {
          "type": "origins:execute_command",
          "command": "scale set pehkui:projectiles 4 @s"
        }
      ]
    }
  },
  "execute_chosen_when_orb": true,
